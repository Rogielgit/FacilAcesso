<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3235b7" />
            <gradient android:angle="-90" android:endColor="#232ec7" android:startColor="#3235b7" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3235b7" />
            <solid android:color="#232ec7" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3235b7" />
            <gradient android:angle="-90" android:endColor="#232ec7" android:startColor="#383aac" />
        </shape>
    </item>
</selector>